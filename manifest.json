{
    "name": "Personal Link Storage",
    "description": "Personal link storage",
    "version": "1.0",
    "manifest_version": 3,
    
    "options_page": "options.html",

    "action": {
      "default_popup": "popup.html",
      "default_title": "app",
      "default_icon": {
          "128": "/images/ls_icon.png"
        }
      },

    "icons": {
      "128": "/images/ls_icon.png"
    },

    "background": {
      "service_worker": "background.js"
    },

    "content_scripts": [
      {
          "matches": [ "<all_urls>" ],
          "js": ["background.js", "scripts.js"]
      }
  ],

    "permissions": [
      "bookmarks",
      "tabs"
    ]
    
  }